{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "outDir": "./dist",
    "jsx": "react",
    "lib": ["ESNext", "dom", "es2016", "es2017"],
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "types": ["node"],
    "noEmit": false
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
